<!doctype html>
<html>
  <head>
    <title>{{ title }}</title>
    {{> head }}
    <style>
      article {
        padding-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <article>
      {{{ contents }}}
    </article>
    {{# each collections.posts }}
    <article>
      <h2><a href="/{{ path }}">{{ title }}</a></h2>
      <time datetime="{{ dateTime date }}">{{ prettyDate date }}</time>
      {{{ excerpt }}}
      <a href="/{{ path }}">Continue reading {{ title }}...</a>
    </article>
    {{/ each }}
  </body>
</html>
